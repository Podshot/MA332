function [r, status] = AR(c,x0,epsilon,maxitr,loud)
%AR Summary of this function goes here
%   Detailed explanation goes here
l = length(c) - 1;
roots = zeros(1,l);
for i = 1:l
    [xbest,pxbest,nitr,q,status] = NewtonPoly(c,x0,epsilon,maxitr,loud);
    roots(i) = xbest;
    c = q;

end

r = roots;
